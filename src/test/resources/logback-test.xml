<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
            </Pattern>
        </layout>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
    <logger name="org.springframework" level="DEBUG" />
    <logger name="org.springframework.beans" level="INFO" />
    <logger name="org.springframework.aop.framework" level="INFO" />
    <logger name="org.springframework.context.annotation" level="INFO" />
    <logger name="org.springframework.core" level="INFO" />
    <logger name="org.springframework.ldap" level="INFO" />
    <logger name="org.springframework.web.context" level="INFO" />
    <logger name="org.springframework.orm.jpa" level="INFO" />
    <logger name="org.axonframework.eventsourcing" level="DEBUG" />
    <logger name="org.axonframework.eventhandling.replay" level="TRACE" />
    <logger name="org.axonframework.unitofwork" level="TRACE" />
    <logger name="org.springframework.test.context.jdbc" level="TRACE" />
    <logger name="org.apache.tomcat.jdbc.pool" level="TRACE" />

</configuration>