<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:axon="http://www.axonframework.org/schema/core"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.axonframework.org/schema/core http://www.axonframework.org/schema/axon-core.xsd">

    <bean id="createEvalSeasonCommandHandler"
          class="net.madvirus.eval.command.evalseason.CreateEvalSeasonCommandHandler">
        <constructor-arg ref="evalSeasonRepository"/>
    </bean>

    <bean class="net.madvirus.eval.command.evalseason.UpdateMappingCommandHandler">
        <constructor-arg ref="evalSeasonRepository" />
        <constructor-arg ref="userModelRepository" />
    </bean>

    <axon:aggregate-command-handler id="evaluationCommandHandler"
                                    aggregate-type="net.madvirus.eval.command.evalseason.EvalSeason"
                                    repository="evalSeasonRepository"
                                    command-bus="commandBus"/>
</beans>