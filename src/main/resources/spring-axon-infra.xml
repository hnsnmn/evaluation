<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:axon="http://www.axonframework.org/schema/core"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.axonframework.org/schema/core http://www.axonframework.org/schema/axon-core.xsd">

    <axon:annotation-config command-bus="commandBus" event-bus="eventBus"/>

    <axon:command-bus id="commandBus" transaction-manager="axonTxMgr"/>

    <axon:event-sourcing-repository id="evalSeasonRepository"
                                    aggregate-type="net.madvirus.eval.command.evalseason.EvalSeason"
                                    event-store="jdbcEventStore"
                                    event-bus="eventBus" />

    <axon:event-sourcing-repository id="mappingsRepository"
                                    aggregate-type="net.madvirus.eval.command.mappings.Mappings"
                                    event-store="jdbcEventStore"
                                    event-bus="eventBus" />

    <axon:jdbc-event-store id="jdbcEventStore"
                           data-source="dataSource"
                           force-utc-timestamp="true"/>

    <axon:event-bus id="eventBus" />

    <axon:cluster id="cluster">
        <axon:selectors>
            <axon:package prefix="net.madvirus.eval.query" />
        </axon:selectors>
    </axon:cluster>

    <bean id="axonTxMgr" class="org.axonframework.unitofwork.SpringTransactionManager">
        <property name="transactionManager" ref="transactionManager"/>
    </bean>
</beans>