<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:axon="http://www.axonframework.org/schema/core"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.axonframework.org/schema/core http://www.axonframework.org/schema/axon-core.xsd">

    <axon:annotation-config command-bus="commandBus" event-bus="eventBus"/>

    <axon:command-bus id="commandBus" transaction-manager="axonTxMgr"/>

    <bean id="commandGateway" class="org.axonframework.commandhandling.gateway.DefaultCommandGateway">
        <constructor-arg ref="commandBus"/>
        <constructor-arg>
            <list />
        </constructor-arg>
    </bean>

    <axon:event-sourcing-repository id="evalSeasonRepository"
                                    aggregate-type="net.madvirus.eval.command.evalseason.EvalSeason"
                                    event-store="jdbcEventStore"
                                    event-bus="eventBus"
            />

    <axon:jdbc-event-store id="jdbcEventStore"
                           data-source="dataSource"
                           sql-schema="sqlSchema"
                           event-serializer="jacksonEventSerializer"
            />

    <bean id="jacksonEventSerializer" class="org.axonframework.serializer.json.JacksonSerializer">
        <constructor-arg>
            <bean class="net.madvirus.eval.axon.ObjectMapperFactory" />
        </constructor-arg>
    </bean>


    <bean id="sqlSchema" class="net.madvirus.eval.axon.CustomEventSqlSchema">
        <constructor-arg value="#{T(java.lang.String)}"/>
        <property name="forceUtc" value="true"/>
    </bean>

    <axon:event-bus id="eventBus"/>

    <axon:cluster id="evalSeasonCluster">
        <axon:replay-config event-store="jdbcEventStore" transaction-manager="axonTxMgr" />
        <axon:selectors>
            <axon:package prefix="net.madvirus.eval.query.evalseason"/>
        </axon:selectors>
    </axon:cluster>

    <bean id="axonTxMgr" class="org.axonframework.unitofwork.SpringTransactionManager">
        <property name="transactionManager" ref="transactionManager"/>
    </bean>
</beans>